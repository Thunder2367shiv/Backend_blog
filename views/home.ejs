<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %>
    <title>Home page</title>
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #fff; /* White text */
            font-family: Arial, sans-serif; /* Font family */
        }

        /* Animation for the background */
        @keyframes animatedBackground {
            from {
                background-position: 0% 50%;
            }
            to {
                background-position: 100% 50%;
            }
        }

        /* Custom CSS for form */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .card {
            background-color: #ffffff; /* Dark card background */
            color: #000000; /* White text */
            margin-bottom: 20px;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px); /* Lift the card on hover */
            box-shadow: 10px 15px 15px rgba(255, 255, 255, 0.2);
        }

        .card-img-top {
            height: 200px; /* Adjust the height of the card image */
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.5rem; /* Card title size */
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1rem; /* Card text size */
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #4a90e2; /* Vivid cerulean button color */
            border-color: #4a90e2; /* Vivid cerulean button border color */
            border-radius: 5px;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #357bd8; /* Darker vivid cerulean hover color for primary button */
            border-color: #357bd8; /* Darker vivid cerulean hover border color for primary button */
        }

        @media (max-width: 768px) {
            .card {
                width: 100%; /* Full width for small screens */
            }
        }

        /* Apply animation to the background */
        body:before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(-45deg, #414147, #142930, #0c1f28); /* Dark gradient */
            background-size: 400% 400%;
            animation: animatedBackground 15s ease infinite; 
        }
    </style>
</head>
<body>
    <%- include('./partials/nav')  %>
    <div class="container mt-3">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/script')  %>
</body>
</html>
