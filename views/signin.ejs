<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %>
    <title>Signin</title>
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #fff; /* White text */
            font-family: Arial, sans-serif; /* Font family */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            padding: 0;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: 10px 20px;
            background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent dark navbar background */
            z-index: 1000; /* Ensure navbar is above other content */
        }

        .container {
            max-width: 400px;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent dark background */
        }

        .form-label {
            color: #bbb; /* Light gray label text */
            margin-bottom: 10px;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1); /* Dark input background with transparency */
            color: #fff; /* White text */
            border: none;
            border-radius: 5px; /* Rounded corners */
            padding: 10px;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2); /* Darker input background on focus */
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
        }

        .btn-primary {
            background-color: #4a90e2; /* Vivid cerulean button color */
            border: none;
            border-radius: 5px; /* Rounded corners */
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #357bd8; /* Darker vivid cerulean hover color for primary button */
        }

        .btn-primary:focus {
            outline: none;
        }

        .btn-primary:active {
            transform: translateY(1px);
        }

        .signup-link {
            text-align: center;
            margin-top: 20px;
        }

        .signup-link a {
            color: #4a90e2; /* Vivid cerulean link color */
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .signup-link a:hover {
            color: #357bd8; /* Darker vivid cerulean hover color for link */
        }
    </style>
</head>
<body>
    <div class="navbar">
        <%- include('./partials/nav')  %>
    </div>
    <div class="container">
        <form action="/user/signin" method="POST">
            <h2 style="text-align: center; margin-bottom: 20px;">Sign In</h2>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div class="signup-link">
                <p>Don't have an account? <a href="/user/signup">Sign Up</a></p>
            </div>
        </form>
    </div>
    <%- include('./partials/script')  %>
    
</body>
</html>
